<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_sell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/half_standard_margin"
    android:paddingTop="@dimen/half_standard_margin"
    android:paddingBottom="@dimen/half_standard_margin">

    <TextView
        android:id="@+id/volume_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="none"
        android:fadingEdgeLength="@dimen/quarter_standard_margin"
        android:gravity="start"
        android:requiresFadingEdge="horizontal"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_order_book" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="none"
        android:fadingEdgeLength="@dimen/quarter_standard_margin"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:requiresFadingEdge="horizontal"
        android:singleLine="true"
        android:textSize="@dimen/text_size_order_book" />

</LinearLayout>