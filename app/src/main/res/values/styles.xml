<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAnimationStyle">@style/AppAnimationStyle</item>
    </style>

    <style name="AppAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/stay_visible</item>
        <item name="android:activityCloseEnterAnimation">@anim/stay_visible</item>
    </style>

    <style name="AppTheme.CardsBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.CardsBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar.NoBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="UnlockScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
    </style>

    <style name="EditText">
        <item name="met_textColorHint">@color/secondary_text</item>
        <item name="met_primaryColor">@color/secondary_text</item>
        <item name="met_errorColor">@color/error</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.Dark" parent="EditText">
        <item name="met_textColorHint">@color/white_almost</item>
        <item name="met_baseColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="met_primaryColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="PrimaryButton.Overlay" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/primary_action_disabled</item>
        <item name="colorAccent">@color/primary_action</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/PrimaryButton.Overlay</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:paddingStart">@dimen/double_margin</item>
        <item name="android:paddingEnd">@dimen/double_margin</item>
    </style>

    <style name="PrimaryButton.NoBorders" parent="PrimaryButton">
        <item name="android:background">@drawable/primary_button_no_borders_background</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="DialogButton" parent="SecondaryButton">
        <item name="android:textColor">@color/primary_action</item>
    </style>

    <style name="PrimaryActionTextView">
        <item name="android:textColor">@color/primary_action</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="HintText" parent="@style/SecondaryText">
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="TabPicker">
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabTextColor">@color/primary_text</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/standard_margin</item>
    </style>

    <style name="TabPicker.Inverse" parent="@style/TabPicker">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white_almost</item>
    </style>

    <style name="ExpandedTitleAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsedTitleAppearance" parent="@style/ExpandedTitleAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary_action</item>

        <item name="android:textColor">@null</item>
        <item name="android:textSize">@null</item>
    </style>

    <style name="InfoCard">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/standard_margin</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">@dimen/half_standard_margin</item>
    </style>

    <style name="HeadingText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
    </style>

    <style name="SaleProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">4dp</item>
        <item name="android:progressDrawable">@drawable/sale_progress</item>
    </style>

    <style name="LimitedMatchParentWidthConstraint">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintWidth_max">@dimen/max_content_width</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccent</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_colorPressed">@color/colorAccent</item>
    </style>

    <style name="FloatingButtonMenuItem" parent="FloatingButton">
        <item name="fab_size">mini</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_background</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
</resources>
